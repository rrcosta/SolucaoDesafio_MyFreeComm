<p id="notice"><%= notice %></p>

<h1>Purchasers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchasers.each do |purchaser| %>
      <tr>
        <td><%= purchaser.name %></td>
        <td><%= purchaser.count %></td>
        <td><%= link_to 'Show', purchaser %></td>
        <td><%= link_to 'Edit', edit_purchaser_path(purchaser) %></td>
        <td><%= link_to 'Destroy', purchaser, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

